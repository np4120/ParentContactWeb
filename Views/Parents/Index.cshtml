@model IEnumerable<ParentContactWeb.models.Parent>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

// - search by parent or student name
<form asp-controller="Parents" asp-action="Index">
<p>
    <input type="text" name="searchTerm">
    <input type="submit" value="Search" class="btn btn-default" />
</p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FamilyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CellNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FamilyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CellNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.FirstName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ParentId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ParentId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ParentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
