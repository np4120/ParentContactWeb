@model ParentContactWeb.models.Parent

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>


@{

    var contactcount = Model.Contacts.Count;

}


<div>
    <h4>Parent</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FamilyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FamilyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CellNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CellNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FirstName)
        </dd>
    </dl>
</div>


<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Grade
            </th>
            <th>
                Student Notes
            </th>

        </tr>
    </thead>
    {
    <tbody>
        {
        <tr>
            <td>
                @Html.DisplayFor(model => model.Student.FirstName)
            </td>
            <td>
                @Html.DisplayFor(model => model.Student.LastName)
            </td>
            <td>
                @Html.DisplayFor(model => model.Student.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Student.Note)
            </td>

        </tr>
        }
    </tbody>
    }


</table>

<p>



</p>

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                Contact Date
            </th>
            <th>
                Contact Reason
            </th>
            <th>
                School Note
            </th>
            <th>
                Parent Comments
            </th>

        </tr>
    </thead>
    @if (contactcount > 0)

    {
        <tbody>
            @foreach (var item in Model.Contacts)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactReason)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TalkingPoints)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParentComments)
                    </td>

                </tr>
            }
        </tbody>


    }

    else
    {

        @Html.DisplayText("no notes found")




    }





</table>








<div>
    <a asp-action="Edit" asp-route-id="@Model.ParentId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
