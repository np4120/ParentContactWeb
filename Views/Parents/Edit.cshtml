@model ParentContactWeb.models.Parent

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

@{
    var student = ViewData["student"] as ParentContactWeb.models.Student;
    var studentname = student.FirstName + " " + student.LastName;



}

<h4>Parent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ParentId" />
            
            <div class="form-row">
                <input type="hidden" asp-for="StudentId" />
            @Html.TextBox("Norman", (string)studentname)            
            </div>

            
            <div class="form-row">
                <label asp-for="FamilyName" class="control-label"></label>
                <input asp-for="FamilyName" class="form-control" />
                <span asp-validation-for="FamilyName" class="text-danger"></span>
            </div>
            
            <div class="form-row">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-row">
                <label asp-for="CellNo" class="control-label"></label>
                <input asp-for="CellNo" class="form-control" />
                <span asp-validation-for="CellNo" class="text-danger"></span>
            </div>
            <div class="form-row">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
