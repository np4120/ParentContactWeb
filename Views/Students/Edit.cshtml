@model ParentContactWeb.models.Student

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

@{   

    var studentname = Model.FirstName + " " + Model.LastName;

 }


<h4>Student</h4>
<hr />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StudentId" />


       
            <div class="form-row">

                <div class="form-group">
                   
                    <input type="hidden" asp-for="StudentNo" class="form-control" />
                   
                </div>
                <div class="form-group">
                   
                    <input type="hidden" asp-for="Usi" class="form-control" />
                   
                </div>






                <div class="col-4">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="col-4">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="col-4">
                    <label asp-for="Grade" class="control-label"></label>
                    <input asp-for="Grade" class="form-control" />
                    <span asp-validation-for="Grade" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <label asp-for="StudentNotes" class="control-label"></label>
                <input asp-for="StudentNotes" class="form-control" />
                <span asp-validation-for="StudentNotes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>


