@model ParentContactWeb.models.Contact

@{
    ViewData["Title"] = "Create";
    var parent = @ViewData["Parent"] as ParentContactWeb.models.Parent;
    var student = @ViewData["Student"] as ParentContactWeb.models.Student;
    var parentname = parent.FirstName + " " + parent.FamilyName;
    var studentname = student.FirstName + " " + student.LastName;
    var sID = student.StudentId;
    var pID = parent.ParentId;
}

<h1>Create</h1>

<h4>Contact</h4>

<p>
    <h6>
        
        Parent: @parentname
        
       
    </h6>

</p>

<p>
    <h6>

      
        Student :     @studentname

    </h6>

</p>



        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                 <input type="hidden" id="StudentId" name="StudentId" readonly="readonly" value="@sID" />
                 <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" id="ParentId" name="ParentId" readonly="readonly" value="@pID" />
                <span asp-validation-for="ParentId" class="text-danger"></span>
             </div>
   


            <div class="form-row">
                <div class="col">
                    <label asp-for="AssignedTo" class="control-label"> Assigned To</label>
                    <Select asp-for="AssignedTo" class="form-control" asp-items="ViewBag.AssignedTo">
                        <option value="">Choose Assignee</option>
                    </Select>
                    <span asp-validation-for="AssignedTo" class="text-danger"></span>
                  </div>
            

                <div class="col">
                    <label asp-for="ContactDate" class="control-label">Contact Date</label>
                    <input asp-for="ContactDate" class="form-control" />
                    <span asp-validation-for="ContactDate" class="text-danger"></span>
                </div>
            
                <div class="col">
                    <label asp-for="FollowUpNeeded" class="control-label">is Follow-up Needed</label>
                    <Select asp-for="FollowUpNeeded" class="custom-select">
                        <option value="">Is Follow-up Needed</option>
                        <option value="True">Yes</option>
                        <option value="False">No</option>

                    </Select>



                    <span asp-validation-for="FollowUpNeeded" class="text-danger"></span>
                </div>
            
            
            
            </div>


            <div class="form-row">


                <div class="col-4">
                    <label asp-for="ContactReason" class="control-label">Contact Reason</label>
                    <select asp-for="ContactReason" class="form-control" asp-items="ViewBag.ContactReasons">
                        <option value="">Select Contact Reason</option>
                    </select>
                    <span asp-validation-for="ContactReason" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="ContactMethod" class="control-label">Contact Method</label>
                    <Select asp-for="ContactMethod" class="form-control" asp-items="ViewBag.ContactMethod">
                        <option value="">Select Contact Method</option>
                    </Select>
                    <span asp-validation-for="ContactMethod" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="ContactStatus" class="control-label">Contact Status</label>
                    <Select asp-for="ContactStatus" class="custom-select">
                            <option value="">Choose Status</option>
                            <option value="Open">Open</option>
                            <option value="Closed">Closed</option>
                 
                     </Select>
                    <span asp-validation-for="ContactStatus" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group">
                <label asp-for="TalkingPoints" class="control-label">School Notes</label>
                @Html.TextAreaFor(m => m.TalkingPoints, new { @class = "form-control" })
                <span asp-validation-for="TalkingPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParentComments" class="control-label"></label>

                @Html.TextAreaFor(m => m.ParentComments, new { @class = "form-control" })

                <span asp-validation-for="ParentComments" class="text-danger"></span>
            </div>
    
       


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

